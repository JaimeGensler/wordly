<div class='container'>
    <h2>Definition for <%= @word.word %>:</h2>
    <h3 class='def'>
        <span class='pos'><%= @definition.part_of_speech || '???' %></span>
        <%= @definition.definition %>
    </h3>

    <form action="/words/<%= @word.id %>/definitions/<%= @definition.def_id %>" method="post">
        <input name="_method" type="hidden" value="patch">

        <label>
            Change Definition
            <input name="definition" type="text">
        </label>
        <label>
            Change Part Of Speech
            <input name="part_of_speech" type="text">
        </label>

        <button type="submit">Update Definition</button>
    </form>
    <form action="/words/<%= @word.id %>/definitions/<%= @definition.def_id %>" method="post">
        <input name="_method" type="hidden" value="delete">

        <button type="submit">Delete Definition</button>
    </form>
</div>
<a class='back' href="/words/<%= @word.id%>">Go Back!</a>
