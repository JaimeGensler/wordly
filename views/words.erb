<% if @words.any? %>
<div id='cards'>
    <% @words.each do |word| %>
    <div class='card'>
        <div class='card-content'>
            <div class='card-front'>
                <!-- <a href='/words/<%= word.id %>'><%= word.word %></a> -->
                <p>TEST1</p>
            </div>
            <div class='card-back'>
                <p>TEST2</p>
            </div>
        </div>
    </div>
    <% end %>
</div>
<% else %>
<div id='cards-none'>
    <p>It doesn't look like you've created any word cards yet!</p>
    <p>You can make some here:</p>
    <a href='/words/create'>Make Words!</a>
</div>
<% end %>
