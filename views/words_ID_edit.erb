<div class='container'>
    <h1>Editing <%= @word.word %></h1>

    <form action="/words/<%= @word.id %>" method="post">
        <input name="_method" type="hidden" value="patch">

        <label>
            New Word Spelling
            <input name="word" type="text" placeholder="<%= @word.word %>">
        </label>
        <button type="submit">Update!</button>
    </form>

    <br>
    <form action="/words/<%= @word.id %>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit">Delete Word</button>
    </form>
</div>

<a class='back' href="/words/<%= @word.id%>">Go Back!</a>
